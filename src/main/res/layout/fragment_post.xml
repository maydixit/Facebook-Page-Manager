<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/layout_bg"
    >

    <EditText
        android:background="@drawable/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input_post_frag"
        android:layout_weight="0.51"
        android:text="Enter text here"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        >

        <Button
            android:text="@string/make_unpubpost_text"
            android:id="@+id/make_post_unpub_button_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="49dp"
            android:background="@drawable/button_bg"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publish_with_date_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_bg"
            android:textColor="@color/cardview_light_background"/>

        <Button
            android:text="@string/make_post_text"
            android:id="@+id/make_post_pub_button_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="@drawable/button_bg"
            android:textColor="@color/cardview_light_background"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/date_input"
        android:layout_weight="0.51"
        android:background="@drawable/layout_bg"/>
</LinearLayout>